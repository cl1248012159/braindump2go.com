/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<?php if ($this->getIsNeedToDisplaySideBar()):?>
<script type="text/javascript">
function show_recetlyadd(){
	document.getElementById('cart-sidebar').style.display="block";
}
function hide_recetlyadd(){
	document.getElementById('cart-sidebar').style.display="none";
}
</script>
<div class="block-cart">
    <?php $_cartQty = $this->getSummaryCount() ?>
    <div class="block-content" onmouseout="hide_recetlyadd()">
    <?php if ($_cartQty>0): ?>
        <div class="summary">
            <?php if ($_cartQty==1): ?>
                <p class="amount" onmouseover="show_recetlyadd()" ><?php echo $this->__('<a href="%s">Shopping Cart!<br/> <span> 1 Items in Your Cart</span></a>', $this->getUrl('checkout/cart')) ?></p>
            
            
             <?php else:?>
                <p class="amount" onmouseover="show_recetlyadd()"><?php echo $this->__(' <a href="%s">Shopping Cart!<br/><span> %s Items in Your Cart</span></a>', $this->getUrl('checkout/cart'), $_cartQty) ?></p>
            <?php endif ?>
            
        </div>
    <?php else: ?> 
    <p class="empty"><?php echo $this->__('Shopping Cart!<br> <span> 0 Items in Your Cart</span>') ?></p>
	
    <?php endif;?>
	
   
    </div>
</div>
<?php endif;?>
